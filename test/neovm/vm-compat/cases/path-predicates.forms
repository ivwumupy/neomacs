; file-name-absolute-p and directory-name-p compatibility.
(file-name-absolute-p "/tmp")
(file-name-absolute-p "tmp")
(file-name-absolute-p "~/tmp")
(file-name-absolute-p "~")
(file-name-absolute-p "~root")
(directory-name-p "/tmp/")
(directory-name-p "/tmp")
(directory-name-p "")
(directory-name-p "foo/")
(directory-name-p "foo")
(condition-case err (file-name-absolute-p :x) (error (car err)))
(condition-case err (directory-name-p nil) (error (car err)))
